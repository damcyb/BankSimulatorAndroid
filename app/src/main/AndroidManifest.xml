<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.banksimulatorandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.ui.CreateUserActivity"></activity>
        <activity android:name=".View.ui.UserAccountActivity" />
        <activity
            android:name=".View.UserAccountActivity"
            android:label="@string/title_activity_user_account"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.ui.LoginActivity" />
        <activity android:name=".View.ui.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>